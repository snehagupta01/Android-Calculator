<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        tools:ignore="MissingConstraints"
        android:layout_margin="10dp"
        android:id="@+id/t1"
        android:textSize="35sp"
        android:textStyle="bold"
        android:gravity="center|right"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        tools:ignore="MissingConstraints">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="DEL"
            android:id="@+id/del"
            android:textStyle="bold"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="C"
            android:id="@+id/clear"
            android:textStyle="bold"
            android:layout_height="match_parent"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        tools:ignore="MissingConstraints">
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="20sp"
        android:text="7"
        android:id="@+id/b7"
        android:textStyle="bold"
        android:layout_height="match_parent"
         />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="8"
            android:id="@+id/b8"
            android:textStyle="bold"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="9"
            android:id="@+id/b9"
            android:textStyle="bold"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="*"
            android:id="@+id/multiply"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        tools:ignore="MissingConstraints">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="4"
            android:id="@+id/b4"
            android:textStyle="bold"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="5"
            android:id="@+id/b5"
            android:textStyle="bold"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="6"
            android:id="@+id/b6"
            android:textStyle="bold"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="-"
            android:id="@+id/minus"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        tools:ignore="MissingConstraints">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="1"
            android:id="@+id/b1"
            android:textStyle="bold"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="2"
            android:id="@+id/b2"
            android:textStyle="bold"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="3"
            android:id="@+id/b3"
            android:textStyle="bold"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="+"
            android:id="@+id/plus"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        tools:ignore="MissingConstraints">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="."
            android:id="@+id/b"
            android:textStyle="bold"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="0"
            android:id="@+id/b0"
            android:textStyle="bold"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="="
            android:id="@+id/bise"
            android:textStyle="bold"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="/"
            android:id="@+id/divide"
            android:textStyle="bold"
            />
    </LinearLayout>
</LinearLayout>